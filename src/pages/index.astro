---
import Layout from '../layouts/Layout.astro';
import AppBar from '../components/AppBar';
import LinkedinPostPreviewGenerator from '../components/LinkedinPostPreviewGenerator';

---

<Layout title="LinkedIn Post Preview Generator">
	<main>
		<h2>LinkedIn Post Preview Generator</h2>
        <h3>Optimize your LinkedIn content copywriting to attract more leads</h3>
		<LinkedinPostPreviewGenerator client:only />
	</main>
</Layout>

<style>
    h2{
        @apply font-medium text-2xl md:text-5xl text-center;
    }
    h3 {
        @apply text-base md:text-xl text-center text-gray-500;
    }
	main {
		margin: auto;
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

</style>
